FROM buildpack-deps:xenial

RUN apt-get update && apt-get install -y --no-install-recommends \
    vim \
    zsh \
    manpages-posix \
    manpages-posix-dev

WORKDIR /tmp

RUN wget https://raw.githubusercontent.com/MilesCranmer/bootstrap/master/bootstrap.sh && \
    chmod +x bootstrap.sh && ./bootstrap.sh

WORKDIR /workspace

CMD ["/bin/zsh"]
